<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/dayCard_day"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="40sp"/>
        <TextView
            android:id="@+id/dayCard_prevision"
            android:layout_below="@id/dayCard_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Partly cloudy in the morning"
            android:drawableBottom="@drawable/weather_clouds"
            android:drawablePadding="40dp"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/dayCard_temp"
            android:layout_alignRight="@+id/dayCard_rainPercent"
            android:layout_above="@id/dayCard_rainPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0Â°"
            android:textSize="70sp"/>
        <TextView
            android:id="@+id/dayCard_rainPercent"
            android:layout_toRightOf="@id/dayCard_prevision"
            android:layout_alignBottom="@+id/dayCard_prevision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="20dp"
            android:text="Chance of rain/snow: 0%"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>